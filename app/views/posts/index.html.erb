<h3>F E E D</h3>

<% if logged_in? %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <ol class="posts">
        <% @posts.each do |post| %>
          <li>
            <%= link_to image_tag(post.user.image.url, :size => '40x40', alt: post.user.name), post.user %>
            <span class="user"><%= link_to post.user.name, post.user %></span>
            <span class="content"><%= post.content %></span>
            <span class="image"><%= image_tag post.image.url %></span>
            <span class="timestamp">
            Posted <%= time_ago_in_words(post.created_at) %> ago.

            <% if current_user == post.user %>
              <%= link_to "delete", post, method: :delete,
                                          data: { confirm: "You sure?" } %>
            <% end %>
            </span>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>

<% else %>
  <%= render 'menus/signup' %>
<% end %>


