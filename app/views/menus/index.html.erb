<% if logged_in? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3" style="background-color:#EA6052;"><a href="#">低カロリー</a></div>
      <div class="col-sm-3" style="background-color:#7FB7FF;"><a href="#">低糖質</a></div>
      <div class="col-sm-3" style="background-color:#FECC27;"><a href="#">グルテンフリー</a></div>
      <div class="col-sm-3" style="background-color:#17A980;"><a href="#">ベジタリアン</a></div>
    </div>
  </div><br>
  <div class="row">
    <aside class="col-md-4">
    </aside>
    <div class="col-md-8">
      <div>
        <% @menus.each do |menu| %>
          <li class="posts">
            <p>メニュー名：<%= menu.name %></p>
            <p>カロリー[kcal]：<%= menu.calorie %></p><br>
          </li>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Posts</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-danger" %>
  </div>
<% end %>