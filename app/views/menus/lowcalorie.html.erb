<% if logged_in? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3" style="background-color:#EA6052;"><%= link_to "低カロリー", lowcalorie_path %></div>
      <div class="col-sm-3" style="background-color:#7FB7FF;"><%= link_to "低糖質", lowcalorie_path %></div>
      <div class="col-sm-3" style="background-color:#FECC27;"><%= link_to "グルテンフリー", lowcalorie_path %></div>
      <div class="col-sm-3" style="background-color:#17A980;"><%= link_to "ベジタリアン", lowcalorie_path %></div>
    </div>
  </div><br>

  <div class="row">
    <aside class="col-md-4">
    </aside>
    <div class="col-md-8">
      <div>
        <% @menu.each do |menu| %>
          <li class="posts">
            <p>メニュー名：<%= menu.name %></p>
            <p>カロリー[kcal]：<%= menu.calorie %></p><br>
          </li>
        <% end %>
      </div>
    </div>
  </div>
  
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Mealthy</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-danger" %>
  </div>
<% end %>