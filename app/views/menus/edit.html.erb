  <div class="row">
    <div class="col-sm-6">
      <%= image_tag @menu.image.url %>
    </div>
　  <section class="col-sm-6">
      <h3><%= @menu.name %></h3>
      <p>価格：<%= @menu.price %>円（税込）</p>
      <p>カロリー：<%= @menu.calorie %>kcal</p>
      <p>たんぱく質：<%= @menu.protein %>g</p>
      <p>脂質：<%= @menu.lipid %>g</p>
      <p>炭水化物：<%= @menu.carb %>g</p>
      <p>塩分（Na）：<%= @menu.sodium %>mg</p>
    </section><br>
  </div>
  
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@menu) do |f| %>

        <%= f.label :メニュー名 %>
        <%= f.text_field :name %>

        <%= f.label :カロリー（ｋａｃｌ） %>
        <%= f.text_field :calorie %>

        <%= f.label :たんぱく質（ｇ） %>
        <%= f.text_field :protein %>

        <%= f.label :脂質（ｇ） %>
        <%= f.text_field :lipid %>

        <%= f.label :炭水化物（ｇ） %>
        <%= f.text_field :carb %>

        <%= f.label :塩分（Ｎａ）（ｍｇ） %>
        <%= f.text_field :sodium %>

        <%= f.label :価格（円） %>
        <%= f.text_field :price %>

        <%= f.label :グルテン（０：なし、１：あり、２：不明） %>
        <%= f.text_field :gluten %>

        <%= f.label :ベジ（０：ベジ、１：ノンベジ、２：不明） %>
        <%= f.text_field :vege %>

        <%= f.label :メニュー写真 %>
        <%= f.file_field :image %><br><br>

        <%= f.submit  "S A V E  C H A N G E S", class: "btn btn-large btn-danger" %>
      <% end %>
    </div>
  </div>